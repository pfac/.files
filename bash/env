#!/bin/bash

export PATH=".:./bin:${HOME}/local/bin:${UNIXCONFDIR}/bin:/usr/local/bin:${PATH}";

# LIBRARY DIRECTORIES
# 	~/lib:	libraries I do or need and don't have a module for
LIBS="${HOME}/local/lib";

if [ "$LD_LIBRARY_PATH" ];
then
	export LD_LIBRARY_PATH="${LIBS}:${LD_LIBRARY_PATH}";
else
	export LD_LIBRARY_PATH="${LIBS}";
fi;

# if vim is installed, use it as default editor
if which vim &> /dev/null; then
	export EDITOR=vim
fi
