#!/bin/bash

export PATH=".:${HOME}/local/bin:${UNIXCONFDIR}/bin:/usr/local/bin:${PATH}";
export LSCOLORS="Dxfxdxcxbxxxxxxxxxxxxx"

# LIBRARY DIRECTORIES
# 	~/lib:	libraries I do or need and don't have a module for
LIBS="${HOME}/local/lib";

if [ "$LD_LIBRARY_PATH" ];
then
	export LD_LIBRARY_PATH="${LIBS}:${LD_LIBRARY_PATH}";
else
	export LD_LIBRARY_PATH="${LIBS}";
fi;

# PROMPT
source "${UNIXCONFDIR}/bash/ps1";
PROMPT_COMMAND=setup_ps1;
