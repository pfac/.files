#!/bin/bash

alias ls="ls -FG";

# cdls
#	Change directory and list it
function cdls {
	if [ "$#" -eq "0" ];
	then
		cd "$HOME";
	else
		cd "$*";
	fi
	ls;
}

alias cd="cdls";

alias .="ls";
alias ..="cd ..";

#	mkcd
#	Make a directory and change the working directory
function mkcd {
	mkdir "$1";
	cd "$1";
}

# topen
# Touch a file and open it with default app
function topen {
	touch $1;
	open $1;
}

alias make="make --no-print-directory"
